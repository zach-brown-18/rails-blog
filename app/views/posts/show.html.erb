<p style="color: green"><%= notice %></p>

<%= render @post %>

<div>
  <% if current_user == @post.user %>
    <%= link_to "Edit this post", edit_post_path(@post) %> |
    <%= link_to "Destroy this post", @post, method: :delete %>
  <% end  %>
  <%= button_to "Back to posts", posts_path, method: :get %>
</div>
